{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": 1
    },
    
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    
    "rules": {
        "semi": ["warn", "always"],
        "quotes": [2, "single", { "avoidEscape": true }]
    }
}
